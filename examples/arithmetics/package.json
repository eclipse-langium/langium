{
    "name": "arithmetics",
    "displayName": "arithmetics",
    "description": "description",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "arithmetics",
            "aliases": ["Arithmetics", "arithmetics"],
            "extensions": [".calc"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "arithmetics",
            "scopeName": "source.arithmetics",
            "path": "./syntaxes/arithmetics.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:arithmetics"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "cli": "./bin/cli.js"
    },
    "main": "./out/extension.js",
    "langium": {
        "languageId": "arithmetics",
        "grammar": "src/language-server/arithmetics.langium",
        "extensions": [".calc"],
        "out": "src/language-server/generated",
        "textMate": {
            "out": "syntaxes/arithmetics.tmLanguage.json"
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc",
        "watch": "tsc -watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate && npm run copygrammar",
        "copygrammar": "copyfiles -f ./src/language-server/generated/grammar.json ./out/language-server/generated"
    },
    "dependencies": {
        "langium": "0.1.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.170",
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "colors": "^1.4.0",
        "copyfiles": "^2.4.1",
        "eslint": "^7.19.0",
        "langium-cli": "0.1.0",
        "typescript": "^4.1.3"
    }
}
