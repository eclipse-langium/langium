{
  "name": "langium",
  "version": "0.0.0",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib/*",
    "build": "tsc --build tsconfig.build.json",
    "watch": "tsc --build tsconfig.build.json --watch",
    "lint": "eslint ./src --ext .js,.ts",
    "prepare": "npm run clean && npm run lint && npm run build && copyfiles -f ./src/gen/grammar.json ./lib/gen",
    "bootstrap": "node ../cli/lib/langium",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "MIT",
  "langium": {
    "grammar": "./langium.lg",
    "extension": ".lg",
    "path": "../index"
  },
  "dependencies": {
    "chevrotain": "^7.1.2",
    "fs-extra": "^9.1.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "copyfiles": "^2.4.1",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  }
