{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" }
    ],
    "autoCloseBefore": "}])`\n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "onEnterRules": [
        {
            "beforeText": ":\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": ";\\s*$",
            "action": {
                "indent": "outdent"
            }
        }
    ]
}
