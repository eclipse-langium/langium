{
  "name": "langium-vscode",
  "version": "0.0.0",
  "displayName": "Langium",
  "description": "VS Code Extension for Langium",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "languages": [{
      "id": "langium",
      "extensions": [ ".langium" ],
      "aliases": [ "Langium" ]
    }],
    "grammars": [
      {
        "language": "langium",
        "scopeName": "source.langium",
        "path": "./syntaxes/langium.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:langium"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "clean": "rimraf out/*",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "langium": "0.0.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.4.0",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
