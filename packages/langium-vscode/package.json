{
  "name": "langium-vscode",
  "publisher": "langium",
  "version": "0.1.0",
  "displayName": "Langium",
  "description": "VS Code extension for Langium",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "license": "MIT",
  "engines": {
    "vscode": "^1.53.0"
  },
  "contributes": {
    "languages": [{
      "id": "langium",
      "extensions": [ ".langium" ],
      "aliases": [ "Langium" ]
    }],
    "grammars": [
      {
        "language": "langium",
        "scopeName": "source.langium",
        "path": "./syntaxes/langium.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:langium"
  ],
  "main": "out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run lint && webpack --mode=production",
    "clean": "rimraf out",
    "build": "webpack",
    "watch": "webpack --watch",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "langium": "0.1.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.4.0",
    "source-map-loader": "^3.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2"
  },
  "repository": "github:langium/langium",
  "bugs": "https://github.com/langium/langium/issues",
  "author": {
      "name": "TypeFox",
      "url": "https://www.typefox.io"
  }
}
