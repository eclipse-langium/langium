{
    "name": "<%= extension-name %>",
    "displayName": "<%= extension-name %>",
    "description": "description",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "<%= language-id %>",
            "aliases": ["<%= RawLanguageName %>", "<%= language-id %>"],
            "extensions": <%= file-extension %>,
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "<%= language-id %>",
            "scopeName": "source.<%= language-id %>",
            "path": "./syntaxes/<%= language-id %>.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:<%= language-id %>"
    ],
    "main": "./out/extension.js",
    "langium": {
        "languageId": "<%= language-id %=>",
        "grammar": "src/language-server/<%= language-id %>.langium",
        "extensions": <%= file-extension %>,
        "out": "src/language-server/generated",
        "textmate": {
            "out": "./syntaxes/<%= language-id %>.tmLanguage.json"
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "webpack",
        "watch": "webpack --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate"
    },
    "dependencies": {
        "langium": "0.0.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "copy-webpack-plugin": "^9.0.0",
        "eslint": "^7.19.0",
        "langium-cli": "0.0.0",
        "source-map-loader": "^3.0.0",
        "ts-loader": "^9.2.3",
        "typescript": "^4.1.3",
        "webpack": "^5.39.1",
        "webpack-cli": "^4.7.2"
    }
}
