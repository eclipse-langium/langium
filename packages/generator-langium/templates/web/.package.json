{
    "scripts": {
        "prepare:public": "node ./prepare.js",
        "build:web": "npm run build && npm run build:monarch && npm run prepare:public && npm run build:worker",
        "build:monarch": "tsc -b tsconfig.monarch.json",
        "build:worker": "esbuild --minify ./out/main-browser.js --bundle --format=iife --outfile=./src/worker/<%= language-id %>-server-worker.js",
        "dev": "vite",
        "dev:debug": "vite",
        "serve": "npm run dev"
    },
    "dependencies": {
        "monaco-editor-workers": "~0.41.0",
        "monaco-editor-wrapper": "~3.1.0"
    },
    "devDependencies": {
        "vite": "~4.4.9"
    }
}
