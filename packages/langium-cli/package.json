{
  "name": "langium-cli",
  "version": "1.0.0",
  "description": "CLI for Langium - the language engineering tool",
  "homepage": "https://langium.org",
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "cli",
    "dsl",
    "lsp",
    "vscode",
    "typescript"
  ],
  "license": "MIT",
  "files": [
    "bin",
    "lib",
    "src",
    "langium-config-schema.json"
  ],
  "bin": {
    "langium": "./bin/langium.js"
  },
  "main": "./lib/langium.js",
  "scripts": {
    "clean": "shx rm -rf lib coverage",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "publish:next": "npm --no-git-tag-version version \"$(semver $npm_package_version -i minor)-next.$(git rev-parse --short HEAD)\" && npm publish --tag next",
    "publish:latest": "npm publish --tag latest"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.0.0",
    "fs-extra": "^9.1.0",
    "jsonschema": "^1.4.0",
    "langium": "~1.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/langium/langium",
    "directory": "packages/langium-cli"
  },
  "bugs": "https://github.com/langium/langium/issues",
  "author": {
    "name": "TypeFox",
    "url": "https://www.typefox.io"
  }
}
