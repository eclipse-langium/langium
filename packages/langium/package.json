{
  "name": "langium",
  "version": "0.0.0",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib/*",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint ./src --ext .js,.ts",
    "bootstrap": "node ../langium-cli/bin/langium && npm run copygrammar",
    "test": "jest --coverage",
    "copygrammar": "copyfiles -f ./src/grammar-lang/generated/grammar.json ./lib/grammar-lang/generated"
  },
  "author": "",
  "license": "MIT",
  "langium": {
    "grammar": "src/grammar-lang/langium-grammar.langium",
    "extensions": ["langium"],
    "out": "src/grammar-lang/generated",
    "langiumInternal": true
  },
  "dependencies": {
    "chevrotain": "^7.1.2",
    "fs-extra": "^9.1.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "copyfiles": "^2.4.1",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  }
}
